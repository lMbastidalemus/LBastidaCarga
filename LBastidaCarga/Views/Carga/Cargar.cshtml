
@{
    ViewBag.Title = "Cargar";
}

<h2 class="text-center">Carga Masiva </h2>


<div class="row">
    <div class="col-md-6">
        <a><input type="submit" value="CSV" class="btn btn-success col-md-12" id="sel" /></a>
    </div>

</div>
@using (Html.BeginForm("Cargar", "Carga", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row g-3" id="fuImage" style="display:none;">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text" id="basic-addon1"><i class="bi bi-file-earmark-text-fill" style="color: lightseagreen"></i></span>
                <input type='file' class="form-control" name="CSV" id="csv" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">V</button>
}
@Scripts.Render("~/bundles/jquery")
<script type="text/javascript">

    $('#sel').click(function () {
        $('#fuImage').toggle('slow', function () {
        });
    });

    $(document).on('change', 'input[type=file]', function () {
        var filaName = this.files[0].name;
        var filaSize = this.files[0].size;

        var ext = filaName.split('.');
        ext = ext[ext.length - 1];

        switch (ext) {

            case 'csv':
                $('#tamanoArchivo').text(fileSize + " bytes " + ext);
                break;
            default:
                alert('El archivo no tiene la extensión adecuada(csv)');
                this.value = ''; // reset del valor
                this.files[0].name = '';
                break;
        }
    })



</script>
